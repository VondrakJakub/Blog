{% extends 'base.html.twig' %}

{% block title %}Edit Post{% endblock %}

    {% block body %}
        <div class="fixed w-1/3 top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
            <div class="bg-white p-6 shadow-md rounded-lg border border-gray-300">
                <h1 class="text-3xl text-center font-semibold mb-4">Edit Article</h1>
                {{ form_start(form) }}
                <div class="mb-4">
                    {{ form_row(form.title) }}
                    {{ form_row(form.content) }}
                </div>
                <button type="submit" class="w-full bg-indigo-500 text-white font-semibold py-2 px-4 rounded-md hover:bg-indigo-600 transition duration-300">Save</button>
                {{ form_end(form) }}
            </div>
        </div>

    {% endblock %}